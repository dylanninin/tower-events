<p id="notice"><%= notice %></p>

<h1>Dummies</h1>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dummies.each do |dummy| %>
      <tr>
        <td><img src='<%= dummy.icon %>' alt='icon' class='img-circle img-responsive icon'></td>
        <td><%= dummy.title %></td>
        <td><%= dummy.description %></td>
        <td><%= link_to 'Show', dummy %></td>
        <td><%= link_to 'Edit', edit_dummy_path(dummy) %></td>
        <td><%= link_to 'Destroy', dummy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dummy', new_dummy_path %>
