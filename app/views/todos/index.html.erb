<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Due to</th>
      <th>Assignee</th>
      <th>Todo list</th>
      <th>Project</th>
      <th>Team</th>
      <th>Creator</th>
      <th>Deleted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.status %></td>
        <td><%= todo.due_to %></td>
        <td><%= todo.assignee %></td>
        <td><%= todo.todo_list %></td>
        <td><%= todo.project %></td>
        <td><%= todo.team %></td>
        <td><%= todo.creator %></td>
        <td><%= todo.deleted_at %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>

<%= paginate @todos %>
