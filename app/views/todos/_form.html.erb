<%= simple_form_for(@todo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status %>
    <%= f.input :due_to %>
    <%= f.association :assignee %>
    <%= f.association :todo_list %>
    <%= f.association :project %>
    <%= f.association :team %>
    <%= f.association :creator %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
